<?xml version="1.0" encoding="UTF-8"?>
<faces-config
        xmlns="http://java.sun.com/xml/ns/javaee"
        xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xsi:schemaLocation="http://java.sun.com/xml/ns/javaee
    http://java.sun.com/xml/ns/javaee/web-facesconfig_2_0.xsd"
        version="2.0">
    <navigation-rule>
        <from-view-id>/web/auth/login.xhtml</from-view-id>
        
        <navigation-case>
            <from-action>#{LoginController.login}</from-action>
            <from-outcome>index_page</from-outcome>
            <to-view-id>/web/index.xhtml</to-view-id>
        </navigation-case>
        <navigation-case>
            <from-action>#{LoginController.login}</from-action>
            <from-outcome>login_page</from-outcome>
            <to-view-id>/web/auth/login.xhtml</to-view-id>
        </navigation-case>
    </navigation-rule>
</faces-config>